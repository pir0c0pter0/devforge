{
  "name": "devforge",
  "version": "0.1.0-alpha",
  "description": "DevForge - Orquestração de containers para desenvolvimento com IA",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "pnpm --parallel -r dev",
    "dev:backend": "pnpm --filter @devforge/backend dev",
    "dev:frontend": "pnpm --filter @devforge/frontend dev",
    "build": "pnpm -r build",
    "build:shared": "pnpm --filter @devforge/shared build",
    "build:backend": "pnpm --filter @devforge/backend build",
    "build:frontend": "pnpm --filter @devforge/frontend build",
    "start": "./scripts/start.sh",
    "stop": "./scripts/stop.sh",
    "restart": "./scripts/restart.sh",
    "status": "./scripts/status.sh",
    "logs": "./scripts/logs.sh",
    "start:backend": "PORT=8000 pnpm --filter @devforge/backend start",
    "start:frontend": "pnpm --filter @devforge/frontend start",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "type-check": "pnpm -r type-check",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "clean:dist": "pnpm -r exec rm -rf dist .next",
    "docker:build": "cd docker && make build",
    "docker:up": "cd docker && make up",
    "docker:up-dev": "cd docker && make up-dev",
    "docker:down": "cd docker && make down",
    "docker:logs": "cd docker && make logs",
    "docker:clean": "cd docker && make clean-all",
    "prepare": "pnpm build:shared"
  },
  "keywords": [
    "docker",
    "claude-code",
    "vscode",
    "container-management",
    "ai-development"
  ],
  "author": "MJr",
  "license": "SEE LICENSE IN LICENSE",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.4.0"
  }
}
